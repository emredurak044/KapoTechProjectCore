@using EntityLayer.Concrete
@model Service
@{
    ViewData["Title"] = "ServicesAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Add</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Service Name</label>
                    <input type="text" class="form-control" placeholder="Service Name" name="ServiceName">
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Service URL</label>
                    <input type="text" class="form-control" placeholder="Project Image" name="ImageUrl">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="Status">
                        Status
                        <i class="input-helper"></i>
                    </label>
                    <span asp-validation-for="Status" class="text-danger"></span>

                </div>
                <input type="submit" class="btn btn-primary mr-2" value="Submit" />
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>


